server {
  listen        443 ssl http2 default_server;
  listen        [::]:443 ssl http2 default_server;

  server_name   <%= @server_name %>;

  access_log    /var/log/nginx/localhost.access.log;

  root          <%= @docroot %>;
  index         index.html;

  location / {
    try_files   $uri$args $uri$args/ index.html;
  }
}

server {
  listen         80;
  listen         [::]:80;
  server_name    <%= @server_name %>;
  return         301 https://$server_name$request_uri;
}